body {
	@apply font-primary text-base text-gray-700 bg-gray-200;
}

.main-wrapper {
	@apply flex justify-between max-w-container mx-auto mt-4;
}

::-moz-selection {
	@apply text-white bg-primary;
}

::selection {
	@apply text-white bg-primary;
}