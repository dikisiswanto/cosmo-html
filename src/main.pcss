@import 'tailwindcss/base';
@import './utilities/grid.pcss';
@import './utilities/spacing.pcss';
@import './components/header.pcss';
@import './components/nav.pcss';
@import './components/newsticker.pcss';
@import './components/social-media.pcss';
@import './components/content.pcss';
@import './components/pagination.pcss';
@import './components/sidebar.pcss';
@import './components/slider.pcss';
